<div class="container-fluid container-fluid-custom pb-5 mb-5">
  <div class="row mb-4">
    <div class="col">
      <h1>Hey, <%= userName %></h1>
    </div>
    <div class="col text-end">
      <a href="/dashboard/add" class="btn btn-primary">+ New Notes</a>
    </div>
  </div>

  <div class="row">
    <% if (notes.length > 0) {
       %> <% notes.map(note => { %>
    <div class="col-sm-3 mb-4">
      <div class="card border-primary" style="min-height: 210px">
        <a
          href="/dashboard/item/<%= note._id %>"
          class="card-body text-decoration-none"
        >
          <h5 class="card-title"><%= note.title %></h5>
          <p class="card-text"><%= note.body %></p>
        </a>
      </div>
    </div>
    <% }) %> <% }
     else { %>
    <div class="row justify-content-center">
      <div class="col-3">
        <img src="/img/human-3.svg" alt="img" class="img-fluid" />
      </div>
      <div class="col-4 mt-md-4">
        <h2>Okay...</h2>
        <h4>
          Let's start with your first note! <br /><br />
          <a href="/dashboard/add">Create one!</a>
        </h4>
      </div>
    </div>
    <% } %>
  </div>



  <% if (notes.length > 0) { %>
    <nav aria-label="Page navigation example">
      <ul class="pagination justify-content-center mt-5">
        <% if (Number(currentPage) === 1) { %>
          <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
        <% } else { %>
          <li class="page-item"><a class="page-link" href="/dashboard?page=<%= Number(currentPage) - 1 %>">Previous</a></li>
        <% } %>
    
        <% let startPage = (Number(currentPage) > 5 ? Number(currentPage) - 4 : 1); %>
    
        <% if (startPage !== 1) { %>
          <li class="page-item"><a class="page-link" href="#">...</a></li>
        <% } %>
    
        <% for (let i = startPage; i <= (Number(currentPage) + 4) && i <= totalPages; i++) { %>
          <% if (i === Number(currentPage)) { %>
            <li class="page-item active"><a class="page-link" href="#"><%= i %></a></li>
          <% } else { %>
            <li class="page-item"><a class="page-link" href="/dashboard?page=<%= i %>"><%= i %></a></li>
          <% } %>
        <% } %>
    
        <% if (Number(currentPage) + 4 < totalPages) { %>
          <li class="page-item"><a class="page-link" href="#">...</a></li>
        <% } %>
    
        <% if (Number(currentPage) < totalPages) { %>
          <li class="page-item"><a class="page-link" href="/dashboard?page=<%= Number(currentPage) + 1 %>">Next</a></li>
        <% } else { %>
          <li class="page-item disabled"><a class="page-link" href="#">Next</a></li>
        <% } %>
      </ul>
    </nav>
    <% } %>
    
  
</div>
